<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @*@Scripts.Render("~/bundles/modernizr")*@
</head>
<body>
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <!-- Navbar Brand-->
        <a class="navbar-brand ps-3" href="@Url.Action("Index","Home")">NeighborFood</a>
        <!-- Sidebar Toggle-->
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>
      
       
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <a class="nav-link" href="@Url.Action("Index","Home")">
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                            Dashboard
                        </a>
                        <div class="sb-sidenav-menu-heading">Menu Principal</div>
                        <a class="nav-link " href="@Url.Action("Index","Cliente")">
                            <div class="sb-nav-link-icon"><i class="fas fa-user-tie"></i></div>
                            Admin Usuarios

                        </a>



                        <div class="sb-sidenav-menu-heading">Administracion</div>
                        <a class="nav-link" href="@Url.Action("Index","Plato")">
                            <div class="sb-nav-link-icon"><i class="fas fa-utensils"></i></div>
                            Platos
                        </a>
                        <a class="nav-link" href="@Url.Action("Index","Resena")">
                            <div class="sb-nav-link-icon"><i class="fas fa-star"></i></div>
                            Reseñas
                        </a>
                        <a class="nav-link" href="@Url.Action("Index","Administrador")">
                            <div class="sb-nav-link-icon"><i class="fas fa-screwdriver"></i></div>
                            Administradores
                        </a>
                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    <div class="small">Usuario:</div>
                    Gustavo Petro
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">

            <div class="container-fluid px-4">
                @RenderBody()
            </div>
        </div>
    </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
        @Scripts.Render("~/bundles/complementos")
</body>
</html>

